<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义按钮样式，不受主题色影响 -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 带边框的按钮样式 -->
    <style name="OutlineButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button_outline</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources> 